---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
  addAllPagesToCollections: true
layout: "layouts/base.njk"
eleventyComputed:
  title: "Tag #{{ tag }}"
permalink: /tags/{{ tag | slugify }}/
panel: false
---

<main class="app-layout__main" id="app-content">
  <div class="page" data-panel="false">
    <div class="page__wrapper">
      <div class="page__main">
        <h1 class="page__title">#{{ tag }}</h1>
        <ul role="list" class="stack">
          {% for post in collections[tag] %}
            <li>
              <a href="{{ post.url }}" class="note-link">
                {{ post.data.title or post.page.fileSlug }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>  
  </div>
</main>
